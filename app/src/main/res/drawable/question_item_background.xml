<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_purple"/>
            <stroke android:width="2dp" android:color="@color/colorPurple"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_purple"/>
            <stroke android:width="1dp" android:color="@color/colorPurple"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dp" android:color="@color/light_grey"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
</selector> 