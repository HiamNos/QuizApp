<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/quizmelogo"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quên mật khẩu"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="32dp"/>

        <!-- Email Input Layout -->
        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập email của bạn để nhận mã xác nhận"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/sendCodeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gửi mã xác nhận"
                android:background="@drawable/submit_btn"
                android:textColor="@android:color/white"
                android:padding="16dp"/>

        </LinearLayout>

        <!-- Code Input Layout -->
        <LinearLayout
            android:id="@+id/codeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập mã xác nhận đã được gửi đến email"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/codeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã xác nhận (6 số)"
                android:inputType="number"
                android:maxLength="6"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/verifyCodeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác nhận mã"
                android:background="@drawable/submit_btn"
                android:textColor="@android:color/white"
                android:padding="16dp"/>

        </LinearLayout>

        <!-- Password Input Layout -->
        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập mật khẩu mới"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Xác nhận mật khẩu"
                android:inputType="textPassword"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/resetPasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt lại mật khẩu"
                android:background="@drawable/submit_btn"
                android:textColor="@android:color/white"
                android:padding="16dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/backToLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại đăng nhập"
            android:background="@drawable/button_2"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

</LinearLayout> 